<aside class="my-4 rounded-xl border border-slate-200 bg-slate-50 px-4">
    <h3 class="mb-1 text-sm font-semibold uppercase tracking-wide text-slate-600">@Title</h3>
    <p class="text-slate-800">@ChildContent</p>
</aside>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public string? Title { get; set; } = "Sidenote";
}
